@model Library_Mvc.Models.Author

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Author</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            font-size: 14px;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .error-message {
            color: red;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 14px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
            color: #777;
        }

        form {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        input[type="text"] {
            width: 60%;
            padding: 8px;
            font-size: 14px;
        }

        button {
            padding: 8px 16px;
            font-size: 14px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .message {
            text-align: center;
            color: red;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Search Author</h1>

        <form asp-action="SearchByName" method="post">
            <input type="text" id="authorName" name="authorName" placeholder="Search for an author..." required />
            <button type="submit">Search</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="message">@ViewBag.ErrorMessage</p>
        }
        else if (Model != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Year of Birth</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.YearOfBirth.ToString("dd/MM/yyyy")</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p>No author found. Please try again.</p>
        }
    </div>

    <div style="margin-bottom: 20px;">
        <a href="@Url.Action("Index", "Home")">Return to the <strong>main page</strong></a> |
        <a href="@Url.Action("Index", "ControlPanel")">Return to <strong>control panel</strong></a>
        <a href="/Authors" class="btn btn-primary"><strong>Go Back</strong></a>
    </div>

    <div class="footer">
        <p>&copy; 2024 Your Library. All rights reserved.</p>
    </div>
</body>
</html>
