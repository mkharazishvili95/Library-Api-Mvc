@{
    Layout = "~/Views/Shared/ControlPanelLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .control-panel {
            text-align: center;
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .control-panel h1 {
                font-size: 32px;
                margin-bottom: 20px;
                color: #007bff;
            }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .control-button {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .control-button:hover {
                background-color: #0056b3;
            }

        .return-link {
            display: block;
            margin-top: 20px;
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            .return-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="control-panel">
        <h1>Library Control Panel</h1>
        <div class="button-container">
            <a href="@Url.Action("Index", "Books")" class="control-button">Books</a>
            <a href="@Url.Action("Index", "Authors")" class="control-button">Authors</a>
        </div>
        <a href="@Url.Action("Index", "Home")" class="return-link">Return to the main page</a>
    </div>
</body>
</html>
